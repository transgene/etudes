{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "outDir": "dist",                         
    "rootDir": "src",                        

    "strict": true,                           
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,

    "forceConsistentCasingInFileNames": true  
  }
}
